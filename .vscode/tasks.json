{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake build [all]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "all",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "cmake build [daybreak]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "daybreak",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "cmake build [daybreak_test]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "daybreak_test",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "cmake configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "${workspaceFolder}",
        "-G",
        "Unix Makefiles",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
    },
  ]
}