{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake build [all]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "all",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": "build",
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "cmake build [daybreak]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "daybreak",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "cmake build [daybreak_test]",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "daybreak_test",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": "test",
      "dependsOn": [
        "cmake configure",
      ],
    },
    {
      "label": "test",
      "type": "shell",
      "command": "${workspaceFolder}/bin/daybreak_test",
      "problemMatcher": [
        "$gcc",
      ],
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "dependsOn": [
        "cmake build [daybreak_test]",
      ],
    },
    {
      "label": "cmake configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "${workspaceFolder}",
        "-DCMAKE_BUILD_TYPE:STRING=Debug",
        "-G",
        "Unix Makefiles",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": "none",
    },
    {
      "label": "cmake clean",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}",
        "--target",
        "clean",
        "--",
      ],
      "problemMatcher": [
        "$gcc",
      ],
      "group": "none",
    },
  ],
}