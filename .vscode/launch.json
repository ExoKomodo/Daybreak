  "version": "0.2.0",
  "configurations": [
    {
      "name": "Hello world",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/daybreak",
      "args": [
        "${workspaceFolder}/examples/hello/hello.day",
        "-o",
        "${workspaceFolder}/out/hello"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "cmake build [daybreak]",
      "miDebuggerPath": "gdb",
      "osx": {
        "miDebuggerPath": "lldb-mi",
      },
    },
    {
      "name": "FooBar",
